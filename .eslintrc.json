{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 8,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "plugins": ["react"],
    "rules": {
        "react/prop-types": 1,
        "no-console": "warn",
        "no-dupe-args": "error",
        "no-unreachable": "warn",
        "default-case": "error",
        "max-classes-per-file": "error",
        "no-eval": "error",
        "max-len": [
            "error",
            {
                "code": 180,
                "ignoreComments": true,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreStrings": true
            }
        ]
    }
}
